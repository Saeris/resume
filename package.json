{
  "name": "@saeris/resume-2020",
  "description": "Personal Resume",
  "version": "2.0.0",
  "author": "Drake Costa <drake@saeris.io> (https://github.com/Saeris/)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/saeris/resume-2020.git"
  },
  "scripts": {
    "build": "preact build --verbose --template public/index.html",
    "ci": "yarn test --silent && codecov",
    "dev": "preact watch --port 3000 --template public/index.html",
    "format": "yarn test:lint --fix",
    "serve": "yarn build && sirv build --port 3000 --cors --single",
    "lint": "yarn test:lint",
    "prepare": "is-ci || husky install && shx rm -rf .git/hooks && shx ln -s ../.husky .git/hooks",
    "start": "per-env",
    "start:production": "npm run -s serve",
    "start:development": "npm run -s dev",
    "test": "run-s test:*",
    "test:lint": "eslint \"./src/**/*.{j,t}s?(x)\"",
    "test:unit": "jest -c ./jest.config.js",
    "test:typecheck": "tsc --noEmit",
    "typecheck": "yarn test:typecheck"
  },
  "dependencies": {
    "preact": "^10.5.15",
    "preact-jsx-chai": "^3.0.0",
    "preact-markup": "^2.1.1",
    "preact-render-to-string": "^5.1.19",
    "preact-router": "^3.2.1",
    "react-icons": "^4.3.1",
    "reakit": "^1.3.10",
    "snarkdown": "^2.0.0",
    "styled-components": "^5.3.3",
    "typeface-orbitron": "^1.1.13",
    "typeface-titillium-web": "^1.1.13"
  },
  "devDependencies": {
    "@saeris/eslint-config": "^2.0.2",
    "@types/jest": "^27.0.2",
    "@types/styled-components": "^5.1.15",
    "@types/webpack-env": "^1.16.0",
    "babel-plugin-styled-components": "^1.13.3",
    "commitlint": "^12.1.1",
    "copy-webpack-plugin": "5.1.1",
    "css-loader": "^5.2.4",
    "eslint": "^7.25.0",
    "husky": "^6.0.0",
    "identity-obj-proxy": "^3.0.0",
    "is-ci": "^3.0.0",
    "jest": "^27.3.1",
    "jsdom": "^18.0.0",
    "lint-staged": "^11.2.5",
    "npm-run-all": "^4.1.5",
    "per-env": "^1.0.2",
    "preact-cli": "^3.0.5",
    "preact-cli-plugin-typescript": "^0.2.2",
    "preact-render-spy": "^1.3.0",
    "prettier": "^2.4.1",
    "shx": "^0.3.3",
    "sirv-cli": "^1.0.11",
    "ts-jest": "^26.5.5",
    "ts-loader": "^9.1.1",
    "typescript": "^4.4.4",
    "typings-for-css-modules-loader": "^1.7.0"
  }
}
